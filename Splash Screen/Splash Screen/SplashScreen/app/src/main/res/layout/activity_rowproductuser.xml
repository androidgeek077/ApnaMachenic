<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/productIconIv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_shop_black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toStartOf="@id/nextIv"
            android:layout_toEndOf="@+id/productIconIv"
            android:layout_toRightOf="@+id/productIconIv"
            android:layout_toLeftOf="@id/nextIv">


            <TextView
                android:id="@+id/discountedNoteTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rect05"
                android:padding="5dp"
                android:text="10% OFF"
                android:textSize="10sp"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorGreen"
                android:layout_alignParentRight="true" />


            <TextView
                android:id="@+id/titleTv"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textStyle="bold"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/descriptionTv"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The product description"
                android:maxLines="2"
                android:minLines="2"
                android:layout_below="@id/titleTv"
                android:textStyle="bold"
                android:textColor="@color/black" />



            <TextView
                android:id="@+id/availabilityTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Stock"
                android:layout_below="@id/descriptionTv"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/addToCartTv"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:gravity="center"
                android:layout_below="@id/availabilityTv"
                android:drawableStart="@drawable/ic_shop_black"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ic_shop_black" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@id/addToCartTv"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">


                <TextView
                    android:id="@+id/discountedPriceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="Rs 2400"
                    android:textColor="@color/colorGray"
                    android:layout_marginRight="10dp" />


                <TextView
                    android:layout_toEndOf="@+id/discountedPriceTv"
                    android:id="@+id/originalPriceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 2500"
                    android:textColor="@color/colorGray"
                    android:layout_toRightOf="@+id/discountedPriceTv" />



            </RelativeLayout>


        </RelativeLayout>

        <ImageView
            android:id="@+id/nextIv"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_next_gray"
            android:layout_marginRight="5dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>
